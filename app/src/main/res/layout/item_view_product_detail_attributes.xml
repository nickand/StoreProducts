<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/product_attribute_margin_start"
    android:layout_marginEnd="@dimen/product_attribute_margin_start"
    android:layout_marginBottom="@dimen/product_attribute_margin_bottom">

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/no_spacing"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xs"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@color/gray_9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/separator"
        app:layout_constraintHorizontal_chainStyle="spread"
        tools:text="Attribute" />

    <View
        android:id="@+id/separator"
        android:layout_width="@dimen/spacing_xxxxxs"
        android:layout_height="@dimen/no_spacing"
        android:layout_gravity="center"
        android:background="@color/gray_7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/textView2"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="@dimen/no_spacing"
        android:layout_height="@dimen/no_spacing"
        android:paddingStart="@dimen/spacing_xs"
        android:gravity="center_vertical"
        android:background="@color/gray_9"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/separator"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Value"/>

</androidx.constraintlayout.widget.ConstraintLayout>